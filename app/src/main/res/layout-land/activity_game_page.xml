<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue3_primary"
    android:touchscreenBlocksFocus="false"
    tools:context=".GamePage">

    <Button
        android:id="@+id/equal_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="28dp"
        android:text="@string/equal_btn"
        app:layout_constraintBottom_toTopOf="@+id/result_text"
        app:layout_constraintEnd_toStartOf="@+id/less_btn"
        app:layout_constraintStart_toEndOf="@+id/greater_btn"
        app:layout_constraintTop_toBottomOf="@+id/correct_text"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/less_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:text="@string/less_btn"
        app:layout_constraintBottom_toTopOf="@+id/result_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/equal_btn"
        app:layout_constraintTop_toBottomOf="@+id/right_text"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/greater_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="168dp"
        android:text="@string/greater_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equal_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_text"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/correct_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="33dp"
        android:text="@string/correct_view"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/equal_btn"
        app:layout_constraintEnd_toStartOf="@+id/right_text"
        app:layout_constraintStart_toEndOf="@+id/left_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/wrong_text"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:text="@string/wrong_view"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/correct_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="55dp"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center"
        android:text=""
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/less_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/correct_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="49dp"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center"
        android:text=""
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/greater_btn"
        app:layout_constraintEnd_toStartOf="@+id/correct_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_text" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="124dp"
        android:gravity="center"
        android:text="00"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/greater_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="327dp"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/blue2_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equal_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>